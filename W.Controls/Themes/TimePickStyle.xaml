<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:W.Controls.Controls">
    <Style x:Key="TimePickerScrollItem" TargetType="ListBoxItem">
        <Setter Property="Height" Value="45" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="bg" Background="Transparent">
                        <ContentPresenter
                            x:Name="cp"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <ContentPresenter.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#94A3B8" />
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.85" ScaleY="0.85" />
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ContentPresenter.Resources>
                        </ContentPresenter>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="#4F46E5" />
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="cp"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                            To="1.2"
                                            Duration="0:0:0.2" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="cp"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                            To="1.2"
                                            Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:TimePicker}">
        <Setter Property="Height" Value="35"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TimePicker}">
                    <Grid Background="Transparent">
                        <Border x:Name="BaseBorder" Background="White" BorderBrush="#E2E8F0" 
                            BorderThickness="1" CornerRadius="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="32"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, StringFormat=\{0:HH:mm:ss\}}"
                                       VerticalAlignment="Center" Margin="12,0" Foreground="#334155" IsHitTestVisible="False"/>

                                <ToggleButton x:Name="PART_DropDownButton" Grid.ColumnSpan="2" Background="Transparent" BorderThickness="0"
                                          IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Grid Background="Transparent">
                                                <Path Data="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" 
                                                  Fill="#94A3B8" Width="14" Stretch="Uniform" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <Popup x:Name="PART_Popup" IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}" 
                                   AllowsTransparency="True" Placement="Bottom" StaysOpen="False" Focusable="False">
                                    <Border Background="White" CornerRadius="12" Margin="5" Width="160" Height="220">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="3"/>
                                        </Border.Effect>
                                        <Grid>
                                            <Border Height="40" VerticalAlignment="Center" Background="#F1F5F9" Margin="5,0" CornerRadius="6" IsHitTestVisible="False"/>

                                            <Grid Margin="5,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <ListBox x:Name="PART_HourList" Grid.Column="0" ItemContainerStyle="{StaticResource TimePickerScrollItem}" 
                                                     Padding="0,85" BorderThickness="0" Background="Transparent" ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
                                                <TextBlock Text=":" Grid.Column="1" VerticalAlignment="Center" Foreground="#CBD5E1" Margin="0,0,0,2"/>

                                                <ListBox x:Name="PART_MinuteList" Grid.Column="2" ItemContainerStyle="{StaticResource TimePickerScrollItem}" 
                                                     Padding="0,85" BorderThickness="0" Background="Transparent" ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
                                                <TextBlock Text=":" Grid.Column="3" VerticalAlignment="Center" Foreground="#CBD5E1" Margin="0,0,0,2"/>

                                                <ListBox x:Name="PART_SecondList" Grid.Column="4" ItemContainerStyle="{StaticResource TimePickerScrollItem}" 
                                                     Padding="0,85" BorderThickness="0" Background="Transparent" ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
                                            </Grid>

                                            <Border VerticalAlignment="Top" Height="75" IsHitTestVisible="False" CornerRadius="12,12,0,0">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="White" Offset="0.2"/>
                                                        <GradientStop Color="#00FFFFFF" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                            </Border>
                                            <Border VerticalAlignment="Bottom" Height="75" IsHitTestVisible="False" CornerRadius="0,0,12,12">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                        <GradientStop Color="White" Offset="0.2"/>
                                                        <GradientStop Color="#00FFFFFF" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>