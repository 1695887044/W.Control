<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:W.Controls.Controls">

    <SolidColorBrush x:Key="SidebarBg" Color="#F1F5F9" />
    <SolidColorBrush x:Key="ContentBg" Color="#F8FAFC" />
    <SolidColorBrush x:Key="AccentBlue" Color="#3B82F6" />
    <SolidColorBrush x:Key="TextMain" Color="#1E293B" />

    <Style TargetType="{x:Type controls:AutoPropertyGrid}">
        <Setter Property="Background" Value="{StaticResource ContentBg}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AutoPropertyGrid}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="8" ClipToBounds="True">
                        <TabControl x:Name="PART_TabControl" 
                                    TabStripPlacement="Left"
                                    BorderThickness="0"
                                    Background="Transparent">
                            <TabControl.Template>
                                <ControlTemplate TargetType="TabControl">
                                    <Grid IsItemsHost="False">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="220" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="{StaticResource SidebarBg}" BorderBrush="#E2E8F0" BorderThickness="0,0,1,0">
                                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                                          HorizontalScrollBarVisibility="Disabled"
                                                          Padding="0,15">
                                                <ItemsPresenter />
                                            </ScrollViewer>
                                        </Border>

                                        <Border Grid.Column="1" Background="{StaticResource ContentBg}">
                                            <ContentPresenter x:Name="PART_SelectedContentHost" 
                                                              ContentSource="SelectedContent" />
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </TabControl.Template>

                            <TabControl.ItemContainerStyle>
                                <Style TargetType="TabItem">
                                    <Setter Property="Margin" Value="12,2,12,2" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TabItem">
                                                <Border x:Name="BaseBorder" CornerRadius="6" Background="Transparent" SnapsToDevicePixels="True">
                                                    <Grid Height="40">
                                                        <Border x:Name="ActiveMark" HorizontalAlignment="Left" Width="3" Height="16" 
                                                                Background="Transparent" CornerRadius="2" Margin="8,0,0,0"/>
                                                        <ContentPresenter ContentSource="Header" VerticalAlignment="Center" Margin="24,0,10,0" 
                                                                          TextBlock.Foreground="#64748B" x:Name="TextHost"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="BaseBorder" Property="Background" Value="#E2E8F0" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="BaseBorder" Property="Background" Value="White" />
                                                        <Setter TargetName="ActiveMark" Property="Background" Value="{StaticResource AccentBlue}" />
                                                        <Setter TargetName="TextHost" Property="TextBlock.Foreground" Value="{StaticResource TextMain}" />
                                                        <Setter TargetName="TextHost" Property="TextBlock.FontWeight" Value="SemiBold" />
                                                        <Setter TargetName="BaseBorder" Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect BlurRadius="8" Opacity="0.05" ShadowDepth="1"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TabControl.ItemContainerStyle>

                            <TabControl.ContentTemplate>
                                <DataTemplate>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
                                        <Border Background="White" CornerRadius="12" Padding="32" BorderBrush="#E2E8F0" BorderThickness="1">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="20" Opacity="0.04" ShadowDepth="4"/>
                                            </Border.Effect>
                                            <ContentPresenter Content="{Binding}" />
                                        </Border>
                                    </ScrollViewer>
                                </DataTemplate>
                            </TabControl.ContentTemplate>
                        </TabControl>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>