<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Label}">
                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#007ACC" CornerRadius="2"/>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <ContentPresenter RecognizesAccessKey="True" VerticalAlignment="Center"/>

                                <TextBlock x:Name="SubTextDisplay"
                                       Text="{TemplateBinding Tag}"
                                       FontSize="11"
                                       Foreground="#888888"
                                       Margin="0,3,0,0"
                                       TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="{x:Null}">
                                <Setter TargetName="SubTextDisplay" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="">
                                <Setter TargetName="SubTextDisplay" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernLabel" TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Label}">
                        <StackPanel Orientation="Vertical">
                            <ContentPresenter RecognizesAccessKey="True"/>
                            <TextBlock x:Name="HintText"
                                   Text="{TemplateBinding Tag}"
                                   FontSize="10"
                                   Foreground="#AAAAAA"
                                   Margin="0,2,0,0"
                                   TextWrapping="Wrap"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="{x:Null}">
                                <Setter TargetName="HintText" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="">
                                <Setter TargetName="HintText" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ResourceDictionary>