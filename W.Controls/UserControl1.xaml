<UserControl
  x:Class="W.Controls.UserControl1"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:helper="clr-namespace:W.Controls.Helper"
  xmlns:icons="clr-namespace:W.Controls.Icons"
  xmlns:local="clr-namespace:W.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Width="280"
  Height="240"
  mc:Ignorable="d"
>
  <UniformGrid Background="White" Columns="2" Rows="5">
    <Button helper:IconElement.IconCode="{x:Static icons:FluentIcons.安全}" Content="测试俺帮" />
    <TextBlock helper:IconElement.IconCode="{x:Static icons:FluentIcons.安全}" Text="测试俺帮" />
    <Button
      helper:IconElement.IconCode="{x:Static icons:FluentIcons.安全}"
      helper:IconElement.IconSize="18"
      Content="测帮"
    />
    <ToggleButton
      helper:IconElement.IconCode="{x:Static icons:FluentIcons.安全}"
      Content="测试俺帮"
    />
    <CheckBox helper:IconElement.IconCode="{x:Static icons:FluentIcons.安全}" Content="测试俺帮" />
    <RadioButton helper:IconElement.IconCode="{x:Static icons:FluentIcons.安全}" />
        <TextBox Text="测试俺帮" helper:IconElement.IconCode="{x:Static icons:FluentIcons.保存}" />
  </UniformGrid>
</UserControl>
